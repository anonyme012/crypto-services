{
    "author": "Sebastien Rousseau <sebastienrousseau@users.noreply.github.com>",
    "autoupdate": {
        "fileMap": [
            {
                "basePath": "dist",
                "files": [
                    "**/*"
                ]
            }
        ],
        "source": "git",
        "target": "git://github.com/sebastienrousseau/crypto-service.git"
    },
    "bin": {
        "crypto-lib": "bin/crypto-lib.ts"
    },
    "bugs": {
        "url": "https://github.com/sebastienrousseau/crypto-service/issues"
    },
    "dependencies": {
        "openpgp": "^5.3.0",
        "@types/openpgp": "^4.4.18"
    },
    "description": "Crypto Lib is a powerful intuitive cryptographic JavaScript library that encapsulates common algorithms, functions and provides an interface for low-level cryptographic operations.",
    "devDependencies": {
        "@sebastienrousseau/c8-config": "^0.0.2",
        "@sebastienrousseau/eslint-config": "^0.0.2",
        "@sebastienrousseau/jsdoc-config": "^0.0.5",
        "@sebastienrousseau/markdownlint-config": "^0.0.1",
        "@sebastienrousseau/mocha-config": "^0.0.5",
        "@sebastienrousseau/prettier-config": "^0.0.4",
        "@sebastienrousseau/remark-config": "^0.0.3",
        "@typescript-eslint/eslint-plugin": "^5.26.0",
        "@typescript-eslint/parser": "^5.26.0",
        "@types/mocha": "^9.1.1",
        "@types/chai": "^4.3.1",
        "@types/chai-as-promised": "^7.1.5",
        "@types/compression":"^1.7.2",
        "c8": "^7.11.3",
        "chai": "^4.3.6",
        "chai-as-promised": "^7.1.1",
        "compression":"^1.7.4",
        "dotenv": "^16.0.1",
        "eslint": "^8.16.0",
        "filesizes": "^0.1.2",
        "minami": "^1.2.3",
        "mocha": "^10.0.0",
        "prettier": "^2.6.2",
        "remark-cli": "^10.0.1",
        "remark-footnotes": "^4.0.1",
        "remark-preset-lint-consistent": "^5.1.1",
        "remark-preset-lint-markdown-style-guide": "^5.1.2",
        "remark-preset-lint-recommended": "^6.1.2",
        "rimraf": "^3.0.2",
        "typedoc": "^0.22.15",
        "typedoc-plugin-missing-exports": "^0.22.6",
        "typescript": "^4.7.2",
        "ts-node": "^10.8.1"
    },
    "directories": {
      "src": "./src",
      "test": "__tests__"
    },
    "engines": {
        "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
    },
    "files": [
      "dist/"
    ],
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/sebastienrousseau"
        },
        {
            "type": "paypal",
            "url": "https://paypal.me/wwdseb"
        }
    ],
    "homepage": "https://cryptolib.io",
    "keywords": [
        "crypto-api",
        "crypto-library",
        "crypto-service",
        "cryptography",
        "cryptoservice",
        "decryption-tool",
        "decryption",
        "ecc-cryptography",
        "ecc-key-encryption",
        "ecc",
        "encryption-tool",
        "encryption",
        "encryption",
        "openpgpjs",
        "rfc4880",
        "rsa-cryptography",
        "rsa-decryption",
        "rsa"
    ],
    "license": "MIT",
    "license_URI": "http://www.opensource.org/licenses/mit-license.php",
    "lockfileVersion": 1,
    "main": "./dist/index.js",
    "name": "@sebastienrousseau/crypto-lib",
    "private": false,
    "publishConfig": {
        "access": "public",
        "registry": "https://npm.pkg.github.com"
    },
    "repository": {
        "directory": "packages/crypto-lib",
        "type": "git",
        "url": "git@github.com:sebastienrousseau/crypto-service.git"
    },
    "scripts": {
        "build": "tsc -b && yarn run copy:makefile && yarn copy:package && yarn run copy:copyright && yarn run filesize:distribution",
        "clean": "rimraf ./dist ./docs ./node_modules && rimraf tsconfig.tsbuildinfo",
        "copy:package": "cp ./package.json ./dist/",
        "copy:copyright": "cp COPYRIGHT dist/",
        "copy:license": "cp LICENSE dist/",
        "copy:makefile": "cp Makefile dist/",
        "copy:readme": "cp README.md dist/",
        "docs": "typedoc",
        "fix": "eslint --fix src/**/*.ts",
        "filesize:distribution": "filesizes dist/ > dist/Report.txt",
        "lint": "eslint src/**/*.ts",
        "markdown": "yarn remark ./*.md packages/**/*.md --rc-path ./.remarkrc --quiet",
        "prepack": "yarn build",
        "prettier": "prettier --write src/**/*.ts",
        "release:prepare": "yarn pack",
        "release:publish": "yarn publish --access public --ignore-scripts --@OWNER:registry='https://registry.npmjs.org' && npm publish",
        "release": "yarn release:prepare && yarn release:publish",
        "start": "node dist/index.js",
        "test": "c8 --config=.c8rc mocha --config=.mocharc"
    },
    "types": "./dist/index.d.ts",
    "version": "0.0.2"
}
