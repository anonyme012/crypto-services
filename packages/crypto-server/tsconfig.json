{
    "compilerOptions": {
        "composite": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "paths": {
            "@sebastienrousseau/crypto-lib/*": [
                "../crypto-lib/src/*"
            ]
        },
        "rootDir": "./src",
        "strict": true,
        "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo"
    },
    "exclude": [
        "node_modules",
        "dist",
        "__tests__"
    ],
    "extends": "../../tsconfig.base.json",
    "include": [
        "src"
    ]
}
