{
    "author": "Sebastien Rousseau <hello@crypto-service.co> (https://github.com/sebastienrousseau/crypto-service)",
    "autoupdate": {
        "fileMap": [
            {
                "basePath": "dist",
                "files": [
                    "**/*"
                ]
            }
        ],
        "source": "git",
        "target": "git://github.com/sebastienrousseau/crypto-service.git"
    },
    "bin": {
        "crypto-server": "bin/crypto-server.js"
    },
    "bugs": {
        "url": "https://github.com/sebastienrousseau/crypto-service/issues"
    },
    "dependencies": {
        "@fastify/accepts": "^3.0.0",
        "@fastify/compress": "^5.0.0",
        "@fastify/etag": "^3.0.0",
        "@fastify/helmet": "^8.0.0",
        "@types/node": "latest",
        "@types/uuid": "^8.3.4",
        "fastify": "^3.29.0",
        "fastify-healthcheck": "^3.1.0",
        "fastify-tsconfig": "^1.0.1",
        "tsconfig-paths": "^4.0.0",
        "winston": "^3.7.2"
    },
    "description": "Crypto Server is a Fastify web server that exposes easy consumable REST APIs to perform low-level cryptographic operations. It is implemented using Node.js and relies on Crypto Lib.",
    "devDependencies": {
        "@sebastienrousseau/c8-config": "^0.0.1",
        "@sebastienrousseau/crypto-lib": "^0.0.1",
        "@sebastienrousseau/eslint-config": "^0.0.2",
        "@sebastienrousseau/jsdoc-config": "^0.0.5",
        "@sebastienrousseau/markdownlint-config": "^0.0.1",
        "@sebastienrousseau/mocha-config": "^0.0.1",
        "@sebastienrousseau/prettier-config": "^0.0.4",
        "@sebastienrousseau/remark-config": "^0.0.3",
        "@typescript-eslint/eslint-plugin": "^5.26.0",
        "@typescript-eslint/parser": "^5.26.0",
        "c8": "^7.11.3",
        "chai": "^4.3.6",
        "dotenv": "^16.0.1",
        "eslint": "^8.16.0",
        "filesizes": "^0.1.2",
        "minami": "^1.2.3",
        "mocha": "^10.0.0",
        "prettier": "^2.6.2",
        "remark-cli": "^10.0.1",
        "remark-footnotes": "^4.0.1",
        "remark-preset-lint-consistent": "^5.1.1",
        "remark-preset-lint-markdown-style-guide": "^5.1.2",
        "remark-preset-lint-recommended": "^6.1.2",
        "rimraf": "^3.0.2",
        "typedoc-plugin-missing-exports": "^0.22.6",
        "typedoc": "^0.22.15",
        "typescript": "^4.7.2"
    },
    "engines": {
        "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
    },
    "files": [
        "dist/"
    ],
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/sebastienrousseau"
        },
        {
            "type": "paypal",
            "url": "https://paypal.me/wwdseb"
        }
    ],
    "homepage": "https://cryptosvr.io",
    "keywords": [
        "crypto-api",
        "crypto-library",
        "crypto-service",
        "cryptography",
        "cryptoservice",
        "decryption-tool",
        "decryption",
        "ecc-cryptography",
        "ecc-key-encryption",
        "ecc",
        "encryption-tool",
        "encryption",
        "encryption",
        "openpgpjs",
        "rfc4880",
        "rsa-cryptography",
        "rsa-decryption",
        "rsa"
    ],
    "license": "MIT",
    "license_URI": "http://www.opensource.org/licenses/mit-license.php",
    "lockfileVersion": 1,
    "main": "./dist/index.js",
    "name": "@sebastienrousseau/crypto-server",
    "private": false,
    "publishConfig": {
        "access": "public",
        "registry": "https://npm.pkg.github.com"
    },
    "repository": {
        "directory": "packages/crypto-server",
        "type": "git",
        "url": "git@github.com:sebastienrousseau/crypto-service.git"
    },
    "scripts": {
        "build": "yarn clean && tsc -b && yarn run copy:readme && yarn run copy:license && yarn run copy:makefile && yarn run copy:copyright && yarn run filesize:distribution",
        "clean": "rimraf ./dist ./docs ./node_modules && rimraf tsconfig.tsbuildinfo",
        "compile": "tsc --build && cp \"./package.json\" ./dist/",
        "copy:copyright": "cp COPYRIGHT dist/",
        "copy:license": "cp LICENSE dist/",
        "copy:makefile": "cp Makefile dist/",
        "copy:readme": "cp README.md dist/",
        "docs": "typedoc",
        "fix": "eslint --fix src/**/*.ts",
        "filesize:distribution": "filesizes dist/ > dist/Report.txt",
        "lint": "eslint src/**/*.ts",
        "markdown": "yarn remark ./*.md packages/**/*.md --rc-path ./.remarkrc --quiet",
        "prepack": "yarn build",
        "prettier": "prettier --write src/**/*.ts",
        "release:prepare": "npm publish $(node -p \"p=require('./package.json');p.name+'-'+p.version+'.tgz'\")",
        "release:publish": "npm publish --access public --ignore-scripts --@OWNER:registry='https://registry.npmjs.org'",
        "start": "node dist/index.js",
        "test": "c8 --config=.c8rc mocha --config=.mocharc"
    },
    "types": "./dist/index.d.ts",
    "version": "0.0.1"
}
