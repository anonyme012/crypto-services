{
    "devDependencies": {
        "eslint-plugin-import": "^2.26.0",
        "eslint": "^8.16.0",
        "lerna": "^4.0.0",
        "remark-cli": "^10.0.1",
        "remark-preset-lint-consistent": "^5.1.1",
        "remark-preset-lint-markdown-style-guide": "^5.1.2",
        "remark-preset-lint-recommended": "^6.1.2"
    },
    "name": "root",
    "private": true,
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "clean:lerna": "lerna clean --yes",
        "lint:js": "eslint --config=.eslintrc.json packages/**/*.js",
        "lint:js:fix": "yarn lint --fix",
        "lint:markdown": "yarn remark \"./*.md\" \"packages/**/*.md\"",
        "prettier-format": "prettier --config .prettierrc 'packages/**/*.js' --write",
        "release": "yarn install && lerna publish && yarn clean",
        "start": "lerna exec yarn start --parallel",
        "start:core": "lerna exec yarn start --scope=@sebastienrousseau/crypto-core",
        "start:server": "lerna exec yarn start --scope=@sebastienrousseau/crypto-server",
        "test": "lerna run test --parallel --since"
    },
    "useWorkspaces": true,
    "version": "independent",
    "workspaces": [
        "packages/*"
    ]
}
