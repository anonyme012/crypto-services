{
    "dependencies": {
        "lerna": "^5.0.0"
    },
    "engines": {
        "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
    },
    "homepage": "https://crypto-service.co",
    "license": "MIT",
    "license_URI": "http://www.opensource.org/licenses/mit-license.php",
    "lockfileVersion": 1,
    "name": "root",
    "private": true,
    "publishConfig": {
        "access": "public",
        "registry": "https://npm.pkg.github.com"
    },
    "scripts": {
        "bootstrap": "yarn clean && lerna bootstrap",
        "build": "lerna run build --stream",
        "clean": "lerna clean --yes",
        "docs": "lerna exec yarn docs --parallel",
        "fix": "lerna exec yarn fix  --parallel",
        "lint": "lerna exec yarn lint --parallel",
        "markdown": "yarn remark ./*.md --rc-path ./.remarkrc --quiet && lerna exec yarn markdown --parallel",
        "prepare": "husky install",
        "prettier": "lerna exec yarn prettier",
        "release:prepare": "lerna exec yarn release:prepare --parallel",
        "release:publish": "lerna exec yarn release:publish --parallel",
        "release": "yarn install && yarn release:prepare && yarn release:publish && yarn clean",
        "start": "lerna exec yarn start --parallel",
        "start:crypto-lib": "lerna exec yarn start --scope=@sebastienrousseau/crypto-lib",
        "start:crypto-server": "lerna exec yarn start --scope=@sebastienrousseau/crypto-server",
        "test": "lerna run test --parallel"
    },
    "useWorkspaces": true,
    "version": "independent",
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
      "@commitlint/cli": "^17.0.1",
      "@commitlint/config-conventional": "^17.0.0",
      "husky": "8.0.1"
    }
}
