{
    "author": "Sebastien Rousseau <hello@crypto-service.dev> (https://github.com/sebastienrousseau/crypto-service)",
    "autoupdate": {
        "fileMap": [
            {
                "basePath": "dist",
                "files": [
                    "**/*"
                ]
            }
        ],
        "source": "git",
        "target": "git://github.com/sebastienrousseau/crypto-service.git"
    },
    "bin": {
        "crypto-service": "index.js"
    },
    "bugs": {
        "url": "https://github.com/sebastienrousseau/crypto-service/issues"
    },
    "dependencies": {
        "fastify": "^3.29.0",
        "openpgp": "^5.2.1"
    },
    "description": "A portable and secure Cryptographic Service with abstract core functionality such as encryption, decryption, digital signing, and verification of signed messages.",
    "devDependencies": {
        "@babel/cli": "^7.17.10",
        "@babel/core": "^7.17.10",
        "@babel/eslint-parser": "^7.17.0",
        "@babel/preset-env": "^7.17.10",
        "@babel/preset-typescript": "^7.16.7",
        "@babel/register": "^7.17.7",
        "babel-plugin-istanbul": "^6.1.1",
        "c8": "^7.11.3",
        "chai": "^4.3.6",
        "commander": "^9.2.0",
        "eslint": "^8.15.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.0.0",
        "filesizes": "^0.1.2",
        "jest": "^28.1.0",
        "jsdoc": "^3.6.10",
        "jshint": "^2.13.4",
        "lerna": "^4.0.0",
        "mkdirp": "^1.0.4",
        "mocha": "^10.0.0",
        "prettier": "2.6.2",
        "remark": "14.0.2",
        "rimraf": "^3.0.2"
    },
    "directories": {
        "bin": "./bin",
        "src": "./src",
        "test": "./test"
    },
    "engines": {
        "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
    },
    "files": [
        "/COPYRIGHT",
        "/index.js",
        "/Makefile",
        "/src"
    ],
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/sebastienrousseau"
        },
        {
            "type": "paypal",
            "url": "https://paypal.me/wwdseb"
        }
    ],
    "homepage": "https://crypto-service.dev",
    "keywords": [
        "crypto-api",
        "crypto-library",
        "crypto-service",
        "cryptography",
        "cryptoservice",
        "decryption-tool",
        "decryption",
        "ecc-cryptography",
        "ecc-key-encryption",
        "ecc",
        "encryption-tool",
        "encryption",
        "encryption",
        "openpgpjs",
        "rfc4880",
        "rsa-cryptography",
        "rsa-decryption",
        "rsa"
    ],
    "license": "MIT",
    "license_URI": "http://www.opensource.org/licenses/mit-license.php",
    "lockfileVersion": 1,
    "main": "index.js",
    "name": "@sebastienrousseau/crypto-service",
    "publishConfig": {
        "access": "public",
        "registry": "https://npm.pkg.github.com"
    },
    "private": true,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/sebastienrousseau/crypto-service.git"
    },
    "rules": {
        "node/no-unpublished-import": [
            "error",
            {
                "convertPath": [
                    {
                        "include": [
                            "src/**/*.js"
                        ],
                        "replace": [
                            "^src/(.+)$",
                            "lib/$1"
                        ]
                    }
                ]
            }
        ]
    },
    "scripts": {
        "build": "lerna run build --parallel",
        "build:final": "npm run lint && npm run lint:markdown && npm run build:crypto:service && cat ./package.json | grep -v '\"private\":' > dist/package.json && npm pack ./dist",
        "build:crypto:service": "npm run clean:dist && npm run create:directory && npm run create:docs && npm run copy:index && npm run copy:src && npm run copy:readme && npm run copy:license && npm run copy:makefile && npm run copy:copyright && npm run filesize:distribution",
        "build:watch": "lerna run build --parallel -- -- -w",
        "clean": "rimraf .nyc_output coverage",
        "clean:dist": "rimraf \"dist/\"",
        "copy:copyright": "cp COPYRIGHT dist/",
        "copy:index": "cp index.js dist/",
        "copy:license": "cp LICENSE dist/",
        "copy:makefile": "cp Makefile dist/",
        "copy:readme": "cp README.md dist/",
        "copy:src": "cp -R ./src dist/src",
        "coverage": "npm run clean && c8 mocha \"test/*.js\" \"./test/**/*.js\" && exit",
        "create:directory": "mkdirp ./dist",
        "create:docs": "jsdoc -c ./jsdoc.json",
        "filesize:distribution": "filesizes dist/ > dist/Report.txt",
        "lint": "eslint --config=.eslintrc.json \"./packages/**/*.js\"",
        "lint-fix": "npm run lint -- --fix",
        "lint:markdown": "remark \"./*.md\" \"./src/**/*.md\" \"./.github/**/*.md\"",
        "postinstall": "lerna bootstrap",
        "prettier": "prettier --write \"packages/**/{lib,bin}/**/*.?(js|json)\"",
        "release:prepare": "npm publish $(node -p \"p=require('./package.json');p.name+'-'+p.version+'.tgz'\")",
        "release:publish": "npm publish --access public --ignore-scripts --@OWNER:registry='https://registry.npmjs.org'",
        "start": "node index.js",
        "test": "npm run clean && c8 mocha --compilers js:babel-core/register"
    },
    "type": "module",
    "version": "0.0.2",
    "workspaces": [
        "packages/*"
    ]
}
